pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "mohamedathikr/doctor-app:latest"
        K8S_DEPLOYMENT = "doctor-app-deployment.yaml"
        K8S_SERVICE = "doctor-app-service.yaml"
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                echo "ğŸ§¹ Cleaning workspace..."
                cleanWs() // Cleans workspace before fetching new code
            }
        }

        stage('Clone Repository') {
            steps {
                echo "ğŸ“¥ Cloning repository..."
                git branch: 'main', url: 'https://github.com/Athik01/Responsive-animated-login-signup-form.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "ğŸ³ Building Docker Image: $DOCKER_IMAGE"
                    sh """
                        echo 'ğŸš€ Starting Docker Build...'
                        docker build -t $DOCKER_IMAGE .
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo "ğŸ“¤ Pushing Docker Image to Docker Hub..."
                    withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                        sh """
                            echo 'ğŸ”„ Logging in to Docker Hub...'
                            docker login -u mohamedathikr -p qwerty786!A
                            echo 'ğŸš€ Pushing Image: $DOCKER_IMAGE'
                            docker push $DOCKER_IMAGE
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "ğŸš€ Deploying to Kubernetes..."
                    sh """
                        echo 'ğŸ“‚ Applying Deployment: $K8S_DEPLOYMENT'
                        kubectl apply -f $K8S_DEPLOYMENT
                        echo 'ğŸ“‚ Applying Service: $K8S_SERVICE'
                        kubectl apply -f $K8S_SERVICE
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "ğŸ” Verifying Kubernetes Deployment..."
                    sh """
                        echo 'ğŸ“Œ Listing Pods...'
                        kubectl get pods
                        echo 'ğŸ“Œ Listing Services...'
                        kubectl get svc
                    """
                }
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment Successful!"
        }
        failure {
            echo "âŒ Deployment Failed!"
        }
    }
}
