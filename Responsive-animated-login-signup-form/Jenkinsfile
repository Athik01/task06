pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "mohamedathikr/doctor-app:latest"
        K8S_DEPLOYMENT = "doctor-app-deployment.yaml"
        K8S_SERVICE = "doctor-app-service.yaml"
        PROMETHEUS_DEPLOYMENT = "prometheus-deployment.yaml"
        PROMETHEUS_CONFIG = "prometheus-config.yaml"
        GRAFANA_DEPLOYMENT = "grafana-deployment.yaml"
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                echo "üßπ Cleaning workspace..."
                cleanWs() // Cleans workspace before fetching new code
            }
        }

        stage('Clone Repository') {
            steps {
                echo "üì• Cloning repository..."
                withCredentials([usernamePassword(credentialsId: 'github-token', usernameVariable: 'GITHUB_USER', passwordVariable: 'GITHUB_TOKEN')]) {
                    sh """
                        git clone https://$GITHUB_USER:$GITHUB_TOKEN@github.com/Athik01/Responsive-animated-login-signup-form.git
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Docker Image: $DOCKER_IMAGE"
                    sh """
                        echo 'üöÄ Starting Docker Build...'
                        docker build -t $DOCKER_IMAGE .
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo "üì§ Pushing Docker Image to Docker Hub..."
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                            echo 'üîÑ Logging in to Docker Hub...'
                            docker login -u $DOCKER_USER -p $DOCKER_PASS
                            echo 'üöÄ Pushing Image: $DOCKER_IMAGE'
                            docker push $DOCKER_IMAGE
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "üöÄ Deploying Doctor-App to Kubernetes..."
                    sh """
                        echo 'üìÇ Applying Deployment: $K8S_DEPLOYMENT'
                        kubectl apply -f $K8S_DEPLOYMENT
                        echo 'üìÇ Applying Service: $K8S_SERVICE'
                        kubectl apply -f $K8S_SERVICE
                    """
                }
            }
        }

        stage('Deploy Monitoring Stack') {
            steps {
                script {
                    echo "üöÄ Deploying Prometheus and Grafana to Kubernetes..."
                    sh """
                        echo 'üìÇ Applying Prometheus Config: $PROMETHEUS_CONFIG'
                        kubectl apply -f $PROMETHEUS_CONFIG
                        echo 'üìÇ Applying Prometheus Deployment: $PROMETHEUS_DEPLOYMENT'
                        kubectl apply -f $PROMETHEUS_DEPLOYMENT
                        echo 'üìÇ Applying Grafana Deployment: $GRAFANA_DEPLOYMENT'
                        kubectl apply -f $GRAFANA_DEPLOYMENT
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "üîç Verifying Kubernetes Deployment..."
                    sh """
                        echo 'üìå Listing Pods...'
                        kubectl get pods
                        echo 'üìå Listing Services...'
                        kubectl get svc
                    """
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment Successful!"
        }
        failure {
            echo "‚ùå Deployment Failed!"
        }
    }
}
